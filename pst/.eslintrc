{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "newline-before-return": "error",
    "no-bitwise": [2, { "allow": [">>", "<<", "&", "|", ">>=", "<<="] }],
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }],
    "linebreak-style": 0,
    "no-plusplus": ["warn", {
      "allowForLoopAfterthoughts": true
    }]
  }
}

{
  "exclude": ["node_modules", "dist", "lib"],
	"compilerOptions": {
		"jsx": "react",
		"target": "es2019", /* Jest does not work with anything above this right now */
    "module": "esnext",
    "rootDir": ".",
    "baseUrl": ".",
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"noUnusedLocals": true,
		"declarationMap": true,
		"removeComments": false,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"downlevelIteration": true,
		"noUnusedParameters": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@app/*": ["packages/*/src"]
		},
	},
	"references": [
    { "path": "packages/app-desktop" },
    { "path": "packages/skill-tree" },
    { "path": "packages/preproceess-passive-nodes" },
	],
}

{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "semi": ["error", "never"],
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "linebreak-style": 0,
    "newline-before-return": "error",
    "no-plusplus": ["warn", {
      "allowForLoopAfterthoughts": true
    }]
  },
  "globals": {
    "preval": true
  }
}
